<?xml version="1.0" encoding="utf-8"?>
    <!--//  TODO (2) Using ConstraintLayout, implement the today list item layout-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_today"
        tools:text="Today, April 03"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageView
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:id="@+id/weather_icon_today"
        tools:src="@drawable/art_clouds"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/date_today"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/weather_description_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rainy"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/weather_icon_today"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/weather_icon_today"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/weather_icon_today" />

    <TextView
        android:id="@+id/high_temperature_today"
        android:layout_width="75dp"
        android:layout_height="83dp"
        android:layout_marginEnd="4dp"
        android:textSize="28dp"
        tools:text="19\u00b0"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon_today"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/weather_icon_today"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintBottom_toBottomOf="@+id/weather_icon_today"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/low_temperature_today"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="28dp"
        tools:text="10\u00b0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/high_temperature_today"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/high_temperature_today"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/high_temperature_today"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>